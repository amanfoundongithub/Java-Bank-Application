<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">


    <ProgressBar
        android:id="@+id/loadingSpinner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/tickIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_tick"
        android:contentDescription="Transaction Complete"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/crossIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_cross"
        android:contentDescription="Transaction Failed"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />


    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please wait..."
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="24dp" />


    <Button
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        android:padding="12dp" />


    <Button
        android:id="@+id/goToMyTransactionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to My Transactions"
        android:visibility="gone"
        android:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        android:padding="12dp" />
</LinearLayout>
